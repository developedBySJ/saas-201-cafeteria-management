<div class="max-w-screen-lg mx-auto min-h-screen pt-12" >
  <h1 class="text-3xl font-medium mb-4">Users</h1>
  <a href=<%= new_user_path %>  class="inline text-lg py-1 bg-blue-200 px-4 rounded-lg">Create</a>
  <table class="border-collapse w-full mt-8">
  <thead>
    <tr>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">User Id</th>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Name</th>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Role</th>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% users.each do |user| %>
    <%= render partial: "users/user_row", locals: { user: user } %>
  <% end %>
  </tbody>
  </table>
</div>

