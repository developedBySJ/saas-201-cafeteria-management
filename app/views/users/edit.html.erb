<div class="max-w-screen-sm mx-auto">
  <div class="p-6 w-full">
  <a href="/dashboard" class="block text-lg font-semibold mb-3 border-b pb-3 text-green-500 underline">Back to dashboard</a>
    <h1 class="text-3xl font-semibold mb-6 border-b pb-6 text-green-900">Update Profile</h1>
     <%= form_with url: user_path, method: "patch" do |form| %> 
    <div class="px-3 mb-5">
    <%= form.label :first_name, "First Name" %>
      <div class="flex">
        <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-account-outline text-gray-400 text-lg"></i></div>
        <%= form.text_field :first_name, :value => user.first_name, class: "w-full -ml-10 pl-6 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-600", placeholder: "John" %>   
      
      </div>
    </div>
    <div class="px-3 mb-5">
    <%= form.label :last_name, "Last Name" %>
      <div class="flex">
        <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-account-outline text-gray-400 text-lg"></i></div>
        <%= form.text_field :last_name, :value => user.last_name, class: "w-full -ml-10 pl-6 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-600", placeholder: "John" %>   
      
      </div>
    </div>
    <div class="px-3 mb-5">
    <%= form.label :password, "Password" %>
      <div class="flex">
        <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-account-outline text-gray-400 text-lg"></i></div>
        <%= form.password_field :password, class: "w-full -ml-10 pl-6 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-600", placeholder: "*********" %>   
      </div>
    </div>
    <% if @current_user.role == "admin" %>
      
    
    <div class="px-3 mb-5">
      <%= form.label :role %>
       
      <div class="ml-9 w-10 z-10 pl-1 text-center flex items-center justify-center mt-1">
        <select name="role" id="role" class="py-2 px-4 border-2 rounded-lg capitallize">
          <%= options_for_select(["admin", "customer", "clerk"], :selected => user.role) %>
        </select>    
      </div>
    </div>
    <% end %>
    <div class="flex">
      <div class="w-full px-3 my-5 border-t">
        <input type="submit" class="text-center block w-full mx-auto bg-green-500 hover:bg-green-700 focus:bg-green-700 text-white rounded-lg px-2 py-2 font-semibold mt-7" value="Update" />
      </div>
    </div>
<% end %>

  </div>
</div>
