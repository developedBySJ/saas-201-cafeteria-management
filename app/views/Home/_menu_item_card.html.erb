<a href=<%= menu_item_url(menu_item.id) %>>
<div class="rounded-lg overflow-hidden hover:shadow-lg transition">
  <div class="bg-cover bg-center h-56 p-4 rounded-lg" style="background-image: url(<%= menu_item.image %>)"></div>
  <div class="p-4">
    <p class="uppercase tracking-wide text-sm font-bold text-green-700"><%= menu_item.name %></p>
    <p class="text-3xl text-green-900">Rs. <%= menu_item.price %></p>
  </div>
  <div class="flex p-4 border-t border-green-100 text-gray-700">
  
    <div class="flex-1 inline-flex items-center">
      <img src=<%= image_path("clock.svg") %> class="mr-2" />
      <p><span class="text-green-900 font-bold"><%= menu_item.prep_time %></span> Min</p>
    </div>
    <div class="flex-1 inline-flex items-center">
      <div class="border-2 border-<%= menu_item.is_veg ? "green" : "red" %>-500 mr-2 rounded flex items-center justify-center" style="width:20px;height:20px;">
        <span class="bg-<%= menu_item.is_veg ? "green" : "red" %>-500 rounded-xl" style="width:6px;height:6px;"></span>
      </div>
      <p><%= menu_item.is_veg ? "Veg" : "Non-Veg" %></p>
    </div>
  </div>
  <%= link_to "ADD TO CART", @current_user ? "#{carts_path}?menu_item_id=#{menu_item.id}" : login_url, method: @current_user ? "post" : "get", class: "block px-4 pt-3 pb-4 border border-green-200 bg-green-100 text-center font-medium text-green-900 hover:bg-green-400 transition-all rounded-lg" %> 
</div>
</a>