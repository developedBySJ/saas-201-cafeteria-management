<div class="max-w-screen-lg p-8 mx-auto">
  <h1 class="text-4xl font-semibold mb-8">Hi, <%= @current_user.first_name %></h1>
  <div class="flex flex-wrap">
    <div class="w-full sm:w-1/2 md:w-1/3 h-40 p-1">
      <%= link_to user_path(@current_user.id), class: "bg-green-100 w-full h-full flex items-center justify-center rounded-lg hover:bg-green-300 block" do %>
        <h1  class="text-2xl text-green-800 font-medium">Profile</h1>
      <% end %>
    </div>
    <div class="w-full sm:w-1/2 md:w-1/3 h-40 p-1">
      <a href="/orders" class="bg-green-100 w-full h-full flex items-center justify-center rounded-lg hover:bg-green-300 block">
        <h1  class="text-2xl text-green-800 font-medium">Orders</h1>
      </a>
    </div>
    <% if @current_user.role == "admin" %>
      <div class="w-full sm:w-1/2 md:w-1/3 h-40 p-1">
      <a href="/users" class="bg-green-100 w-full h-full flex items-center justify-center rounded-lg hover:bg-green-300 block">
        <h1  class="text-2xl text-green-800 font-medium">Users</h1>
      </a>
    </div>
    
    <div class="w-full sm:w-1/2 md:w-1/3 h-40 p-1">
      <a href="/menus" class="bg-green-100 w-full h-full flex items-center justify-center rounded-lg hover:bg-green-300 block">
        <h1  class="text-2xl text-green-800 font-medium">Menus</h1>
      </a>
    </div>
    <div class="w-full sm:w-1/2 md:w-1/3 h-40 p-1">
      <a href="/menu_items" class="bg-green-100 w-full h-full flex items-center justify-center rounded-lg hover:bg-green-300 block">
        <h1  class="text-2xl text-green-800 font-medium">Menus Items</h1>
      </a>
    </div>
    <div class="w-full sm:w-1/2 md:w-1/3 h-40 p-1">
      <a href="/sales" class="bg-green-100 w-full h-full flex items-center justify-center rounded-lg hover:bg-green-300 block">
        <h1 class="text-2xl text-green-800 font-medium">Sales</h1>
      </a>
    </div>
    <% end %>
    
  </div>
</div>
