<div class="px-4 w-full max-w-screen-lg mx-auto my-16 pt-16 flex flex-wrap md:flex-nowrap">
<% if cart_items.length > 0 %>
  <div class="w-full overflow-hidden sm:w-full md:w-2/3 lg:w-2/3">
      <% cart_items.each do |cart_item| %>
        <div class="mb-4">
          <%= render partial: "cart_item_card", locals: { cart_item: cart_item, menu_item: MenuItem.find(cart_item.menu_item_id) } %>
        </div>
      <% end %>
    </div>
        
<div class="p-7 md:ml-4 w-full overflow-hidden sm:w-full md:w-1/3 lg:w-1/3 bg-green-50 rounded-2xl text-green-800 md:self-start">
  <h1 class="text-xl font-semibold mb-4 pb-4 border-b border-green-200">Price Details</h1>
  <div class="mb-4 border-b pb-4 text-base border-green-200">
    <div class="flex justify-between">
      <p>Sub Total</p>
      <p> <%= sprintf "%.2f", total %></p>
    </div>
    <div class="flex justify-between">
      <p>Tax <span>(inclusive)</span></p>
      <p><%= sprintf "%.2f", total * 0.12 %></p>
    </div>
    <div class="flex justify-between">
      <p>Delivery Charges</p>
      <p>+ 40.00</p>
    </div>
    <div class="flex justify-between">
      <p>Discount</p>
      <p>- 40.00</p>
    </div>
  </div>
  <div class="mb-4">
    <div class="flex justify-between text-lg">
      <p class="">Grand Total</p>
      <p><%= sprintf "%.2f", total %></p>
    </div>
  </div>
  <%= link_to "PLACE ORDER", orders_path, method: "post", class: "block px-4 pt-3 pb-4 border border-green-200 bg-green-500 text-center font-medium text-white hover:bg-green-400 transition-all rounded-lg" %>
  <% # <a href="/" class="block px-4 pt-3 pb-4 border border-green-200 bg-green-500 text-center font-medium text-white hover:bg-green-400 transition-all rounded-lg">PLACE ORDER</a> %>
</div>

    </div>
<% else %>
  <div class="w-full sm:w-full md:w-2/3 lg:w-2/3 text-center">
  <h1 class="text-2xl font-semibold text-green-700 text-center mb-12">Your Cart is Empty</h1>
  <a href="/" class="bg-green-200 px-6 py-3 rounded-lg mt-8">Show Menu</a>
</div>
<% end %>
    

</div>
