<div class="max-w-screen-lg mx-auto">
  <div class="w-full border-b border-green-900 border-opacity-20 pb-4">
    <h1 class="text-3xl py-3 border-b border-green-900 mb-4 pb-4 border-opacity-20">#<%= menu.id %> <%= menu.name %> 
    <% if menu.is_active %>
    <span class="inline text-lg py-1 bg-green-200 px-4 rounded-lg ml-2">Active</span>
    <% end %>
    </h1>
    <a href=<%= edit_menu_path(menu.id) %>  class="inline text-lg py-1 bg-blue-200 px-4 rounded-lg ml-2">Edit</a>
    <a href=<%= new_menu_item_path %>  class="ml-2 inline text-lg py-1 bg-gray-200 px-4 rounded-lg ml-2">Add Products</a>
  </div>
  <div class="">
    <table class="border-collapse w-full mt-8">
      <thead>
        <tr>
          <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Item Id</th>
          <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Name</th>
          <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Price</th>
          <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% menu_items.each do |item| %>
          <%= render partial: "menu_item/menu_item_row", locals: { item: item, show_menu_id: false } %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
