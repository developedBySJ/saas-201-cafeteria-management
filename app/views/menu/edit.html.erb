<div class="max-w-screen-sm mx-auto">
  <div class="p-6 w-full">
    <h1 class="text-3xl py-3 border-b border-green-900 mb-4 pb-4 border-opacity-20">Edit Menu</h1>
     <%= form_with url: menu_path, method: "patch" do |form| %> 
    <div class="px-3 mb-5">
      <%= form.label :name, "Name" %>
      <div class="flex pt-2">
        <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-account-outline text-gray-400 text-lg"></i></div>
        <%= form.text_field :name, :value => menu.name, class: "w-full -ml-10 pl-6 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-600" %>   
      </div>
    </div>
    <div class="px-3 mb-5">
      
      <div class="pt-2">
        <%= form.check_box :is_active, :checked => menu.is_active, class: "inline pl-6 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-600" %>   
        <%= form.label :is_active, "Is Active Menu", class: "inline" %>
      </div>
    </div>
    <div class="flex">
      <div class="w-full px-3 mb-5">
        <input type="submit" class="text-center block w-full mx-auto bg-green-500 hover:bg-green-700 focus:bg-green-700 text-white rounded-lg px-3 py-3 font-semibold" value="Update" />
      </div>
    </div>
    <% end %>
  </div>
</div>
