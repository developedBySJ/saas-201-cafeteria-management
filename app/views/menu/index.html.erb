<div class="max-w-screen-lg mx-auto min-h-screen pt-12" >
  <h1 class="text-3xl font-medium mb-4">Menu</h1>
  <a href=<%= new_menu_path %>  class="inline text-lg py-1 bg-blue-200 px-4 rounded-lg">Create</a>
  <table class="border-collapse w-full mt-8">
  <thead>
    <tr>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Menu Id</th>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Name</th>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Status</th>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% menus.each do |menu| %>
    <%= render partial: "menu/menu_row", locals: { menu: menu } %>
  <% end %>
    
  </tbody>
  </table>
</div>

