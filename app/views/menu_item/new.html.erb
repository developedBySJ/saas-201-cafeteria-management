<div class="max-w-screen-sm mx-auto">
  <div class="p-6 w-full">
    <h1 class="text-3xl py-3 border-b border-green-900 mb-4 pb-4 border-opacity-20">Create Menu Item</h1>
    <%= form_with url: menu_items_path, method: "post" do |form| %>
    <div class="px-3 mb-5">
        <%= form.label :menu %>
      <div class="ml-9 w-10 z-10 pl-1 text-center flex items-center justify-center mt-1">
        <select name="menu_id" id="menu" class="py-2 px-4 border-2 rounded-lg">
         
          <%= options_for_select(Menu.options) %>
        </select>
      </div>
    </div>
    <div class="px-3 mb-5">
      <%= form.label :name %>
      <div class="flex">
        <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-account-outline text-gray-400 text-lg"></i></div>
     <%= form.text_field :name, class: "w-full -ml-10 pl-6 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-600", placeholder: "Roasted Chicken" %>   
      </div>
    </div>
    <div class="px-3 mb-5">
      <%= form.label :description %>
      <div class="flex">
        <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-account-outline text-gray-400 text-lg"></i></div>
        <%= form.text_area :description, rows: 3, class: "w-full -ml-10 pl-3 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-600" %>
      </div>
    </div>
    <div class="px-3 mb-5">
      <%= form.label :price %>
      <div class="flex">
        <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-account-outline text-gray-400 text-lg"></i></div>
        <%= form.number_field :price, min: 1, :require => true, class: "w-full -ml-10 pl-4 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-600" %>
      </div>
    </div>
    <div class="px-3 mb-5">
      <%= form.label :image, "Images Url" %>
      <div class="flex">
        <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-account-outline text-gray-400 text-lg"></i></div>
        <%= form.text_field :image, class: "w-full -ml-10 pl-6 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-600" %>   
      </div>
    </div>
    <div class="px-3 mb-5">
      <%= form.label :prep_time, "Preparation Time ( Min )" %>
      <div class="flex">
        <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-account-outline text-gray-400 text-lg"></i></div>
        <%= form.number_field :prep_time, min: 1, :require => true, class: "w-full -ml-10 pl-4 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-green-600" %>
      </div>
    </div>
    <div class="px-3 mb-5">
      <label class="inline-flex items-center">
        <%= form.radio_button :is_veg, true, :checked => true %>
        <span class="ml-2 text-green-600">Veg</span>
      </label>
      <label class="inline-flex items-center ml-6">
        <%= form.radio_button :is_veg, false %>
        <span class="ml-2 text-red-600">Non Veg</span>
      </label>
    </div>
    <div class="flex">
      <div class="w-full px-3 mb-5">
        <input type="submit" class="text-center block w-full mx-auto bg-green-500 hover:bg-green-700 focus:bg-green-700 text-white rounded-lg px-3 py-3 font-semibold" value="CREATE" />
      </div>
    </div>
    <% end %>
  </div>
</div>
