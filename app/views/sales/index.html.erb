<div class="max-w-screen-lg mx-auto min-h-screen pt-12" >
  <h1 class="text-3xl font-medium">Sales Report</h1>
  
  <%= form_with url: "/sales", class: "py-6 flex items-end", method: "get" do |form| %> 
  <div class="m-1">
  <%= form.label :from_date, "From", class: "block text-green-600" %>
  <%= form.date_field :from_date, class: "p-2 border-2 border-green-300 rounded-md text-green-800", required: true, value: params[:from_date] %>
  </div>
  <div class="m-1">
   <%= form.label :to_date, "To", class: "block text-green-600" %>
  <%= form.date_field :to_date, class: "p-2 border-2 border-green-300 rounded-md text-green-800", required: true, value: params[:to_date] %>
  </div>
  <div class="m-1">
    <input type="submit" name="date" id="date" class="bg-green-500 rounded-md text-white cursor-pointer font-semibold py-3 px-6 hover:bg-green-600" value="Show" />
  </div>
<% end %>

  <table class="border-collapse w-full mt-8">

  <thead>
    <tr>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Order Id</th>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Customer</th>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Created At</th>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Status</th>
      <th class="p-3 font-bold uppercase bg-green-200 text-green-900 border border-green-300 hidden sm:table-cell">Total Amount</th>
    </tr>
  </thead>
  <tbody>
  <% if orders.count > 0 %>
    <% orders.each do |order| %>
      <%= render partial: "sales_row", locals: { order: order } %>
    <% end %>
  <% else %>
  <tr class="bg-white sm:hover:bg-green-50 flex sm:table-row flex-row sm:flex-row flex-wrap sm:flex-no-wrap mb-10 sm:mb-0">
 <td colspan="5"  class="w-full sm:w-auto p-3 text-green-800 text-center border border-b block sm:table-cell relative sm:static">
        
    <h1 class="text-xl font-medium">No Pending Orders</h1>
  </td>
  </tr>
  <% end %>
  </tbody>
  </table>
</div>

